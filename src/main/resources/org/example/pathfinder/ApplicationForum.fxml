<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.pathfinder.Controller.ApplicationServiceController"
      style="-fx-background-color: #F5F5F5; -fx-padding: 20; -fx-alignment: center;">

    <!-- ðŸŒŸ Modern Navigation Bar -->
    <HBox spacing="20" alignment="CENTER_LEFT"
          style="-fx-background-color: white;
                 -fx-padding: 12px 18px;
                 -fx-border-radius: 12px;
                 -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 8, 0, 0, 5);
                 -fx-alignment: center-left;">

        <!-- Pathfinder Logo -->
        <ImageView fx:id="logoImage" fitHeight="55" preserveRatio="true"/>

        <!-- Currency Selector -->
        <ComboBox fx:id="currencySelector"
                  promptText="Currency"
                  style="-fx-background-color: transparent;
                         -fx-font-size: 15px;
                         -fx-border-width: 0;
                         -fx-text-fill: #333;
                         -fx-padding: 5px 10px;"/>

        <!-- Sorting Dropdown -->
        <ComboBox fx:id="sortDropdown"
                  promptText="Sort Services"
                  style="-fx-background-color: transparent;
                         -fx-font-size: 15px;
                         -fx-border-width: 0;
                         -fx-text-fill: #333;
                         -fx-padding: 5px 10px;"/>

        <!-- Spacer to push elements right -->
        <Pane HBox.hgrow="ALWAYS"/>

        <!-- ðŸ” Beautiful Search Bar (Premium Look) -->
        <HBox spacing="10" style="-fx-background-color: white;
                                  -fx-border-radius: 30px;
                                  -fx-border-color: #ddd;
                                  -fx-padding: 10px 18px;
                                  -fx-min-width: 400px; /* Increased width */
                                  -fx-max-width: 450px;
                                  -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 4, 0, 0, 3);
                                  -fx-alignment: center-left;">

            <!-- Search Icon Inside -->
            <ImageView fx:id="searchIcon" fitHeight="18" fitWidth="18" style="-fx-opacity: 0.7;"/>

            <!-- Search Field -->
            <TextField fx:id="searchField" promptText="Search services..."
                       style="-fx-background-color: transparent;
                              -fx-border-width: 0;
                              -fx-font-size: 16px;
                              -fx-text-fill: #555;
                              -fx-padding: 2px 5px;"/>

        </HBox>

        <!-- âž• Add New Service Button -->
        <Button fx:id="addServiceButton" text="+"
                onAction="#openServiceForumModal"
                style="-fx-background-color: #4CAF50;
                       -fx-text-fill: white;
                       -fx-font-size: 28px;
                       -fx-min-width: 50px;
                       -fx-min-height: 50px;
                       -fx-border-radius: 50%;
                       -fx-font-weight: bold;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 5, 0, 0, 3);"/>
    </HBox>

    <!-- ðŸŒŸ Services Display Section -->
    <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true"
                style="-fx-padding: 12px; -fx-background: transparent;">
        <GridPane fx:id="servicesGrid"
                  style="-fx-padding: 20; -fx-alignment: center; -fx-background-color: transparent;"
                  hgap="30" vgap="30"/>
    </ScrollPane>

</VBox>
