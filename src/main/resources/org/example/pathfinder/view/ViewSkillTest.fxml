<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pathfinder.Controller.ViewSkillTestController">

    <top>
        <VBox spacing="10" style="-fx-padding: 20px; -fx-background-color: #f4f6f9;">
            <Label fx:id="skillTestTitle" text="Skill Test Title" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label fx:id="skillTestDescription" text="Skill Test Description" style="-fx-font-size: 14px;"/>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-padding: 15px;">
            <VBox fx:id="questionsContainer" spacing="20" style="-fx-padding: 15px; -fx-background-color: white;"/>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 15px;">
            <Button text="Submit" onAction="#submitTest" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <Button text="Clear" onAction="#clearSelection" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-size: 14px;"/>
        </HBox>
    </bottom>
</BorderPane>
