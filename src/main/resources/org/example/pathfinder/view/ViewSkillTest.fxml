<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pathfinder.Controller.ViewSkillTestController">

    <!-- Skill Test Title and Description at the Top -->
    <top>
        <VBox spacing="10" style="-fx-padding: 20px; -fx-background-color: #c19d7b; -fx-border-radius: 8px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 2, 2);">
            <Label fx:id="skillTestTitle" text="Skill Test Title"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label fx:id="skillTestDescription" text="Skill Test Description"
                   style="-fx-font-size: 14px; -fx-text-fill: white;"/>
        </VBox>
    </top>

    <!-- Center Section with Scrollable Questions -->
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true"
                    style="-fx-padding: 15px; -fx-background-color: transparent; -fx-border-color: transparent;">
            <VBox fx:id="questionsContainer" spacing="20"
                  style="-fx-padding: 15px; -fx-background-color: #fdfdfd; -fx-border-color: #ddd;
                         -fx-border-radius: 8px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 4, 0, 2, 2);"/>
        </ScrollPane>
    </center>

    <!-- Bottom Section with Submit and Clear Buttons -->
    <bottom>
        <HBox spacing="20" alignment="CENTER"
              style="-fx-padding: 15px; -fx-background-color: #f4f4f4; -fx-border-color: #ddd; -fx-border-radius: 8px;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 4, 0, 2, 2);">
            <Button text="Submit" onAction="#submitTest"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;"/>
            <Button text="Clear" onAction="#clearSelection"
                    style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;"/>
        </HBox>
    </bottom>

</BorderPane>
