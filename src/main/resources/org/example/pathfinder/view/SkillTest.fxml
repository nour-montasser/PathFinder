<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pathfinder.Controller.SkillTestController">
    <top>
        <Label text="Skill Test " style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10px;"/>
    </top>
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <GridPane hgap="10" vgap="10">
                <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="300"/>

                <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Duration (minutes):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="durationField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Job Offer:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="jobOfferComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="300"/>

                <Label text="Score Required:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="scoreRequiredField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Add Skill Test" onAction="#addSkillTest" style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
                <Button text="Update Skill Test" onAction="#updateSkillTest" style="-fx-background-color: #ffc107; -fx-text-fill: black;"/>
                <Button text="Clear Fields" onAction="#clearFields" style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Skill Test List:" style="-fx-font-weight: bold;"/>
            <ListView fx:id="skillTestListView" prefHeight="200"/>
            <Button text="View Test" onAction="#viewTest" style="-fx-background-color: #28a745; -fx-text-fill: white;"/>

        </VBox>
    </bottom>
</BorderPane>
