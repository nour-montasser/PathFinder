<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pathfinder.Controller.QuestionController">
    <top>
        <Label text=" Add your Questions" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10px;"/>
    </top>
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <GridPane hgap="10" vgap="10">
                <Label text="Question:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="questionField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="300"/>

                <Label text="Responses (comma-separated):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="responseField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Correct Response:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="correctResponseField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Score:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="scoreField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Add Question" onAction="#addQuestion" style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
                <Button text="Clear Fields" onAction="#clearFields" style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Question List:" style="-fx-font-weight: bold;"/>
            <ListView fx:id="questionListView" prefHeight="200"/>
            <Button text="Go to Skill Test" onAction="#goToSkillTestScreen" style="-fx-background-color: #007bff; -fx-text-fill: white;"/>
        </VBox>
    </bottom>
</BorderPane>
