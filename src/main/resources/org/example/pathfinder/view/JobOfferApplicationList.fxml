<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10" style="-fx-padding: 10;" fx:controller="org.example.pathfinder.Controller.JobOfferApplicationList">
    <!-- Job Offer Details Section -->
    <Label fx:id="jobOfferTitle" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
    <Label fx:id="jobOfferDescription" wrapText="true" style="-fx-text-fill: #555555;" />
    <Label fx:id="requiredEducationLabel" style="-fx-text-fill: #555555;" />
    <Label fx:id="requiredExperienceLabel" style="-fx-text-fill: #555555;" />
    <Label fx:id="skillsLabel" style="-fx-text-fill: #555555;" />

    <!-- List of Applications inside a ScrollPane -->
    <Label text="Applications:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
        <ListView fx:id="applicationsListView" style="-fx-background-color: white;" prefHeight="500" />
    </ScrollPane>

    <!-- Close Button -->
    <Button text="Close" onAction="#handleClose" style="-fx-background-color: #2b4156; -fx-text-fill: white;" />
</VBox>
