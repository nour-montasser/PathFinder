<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pathfinder.Controller.AIGeneratedSkillTestController">

    <top>
        <Label text="Generate AI Skill Test" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 15px;"/>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20px;">
            <TextField fx:id="topicField" promptText="Enter test topic..."
                       style="-fx-font-size: 14px; -fx-pref-width: 300px;"/>
            <Button text="Generate Test" fx:id="generateTestButton" onAction="#generateSkillTest"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px;"/>
            <ListView fx:id="questionListView" prefHeight="200" style="-fx-border-color: #c19d7b;"/>

            <!-- ðŸ”¹ NEW: Proceed Button to go to SkillTest Page -->
            <Button text="Proceed to Skill Test" fx:id="proceedButton" onAction="#goToSkillTestScreen"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px;"
                    disable="true"/>
        </VBox>
    </center>
</BorderPane>
