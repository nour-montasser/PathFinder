<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pathfinder.Controller.ApplicationListController"
      spacing="15" style="-fx-padding: 20;" >

    <!-- Title -->
    <Label text="My Applications" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Search Bar -->
    <HBox alignment="CENTER" spacing="10" style="-fx-padding: 5; -fx-alignment: center-right;">
        <HBox alignment="CENTER_LEFT" spacing="5"
              style="-fx-border-color: #ddd; -fx-border-radius: 20; -fx-padding: 5;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3);">
            <ImageView fx:id="searchIcon" fitHeight="25" fitWidth="25" pickOnBounds="true" preserveRatio="true" />
            <TextField fx:id="searchField" promptText="Search..."
                       style="-fx-background-color: transparent; -fx-border-width: 0; -fx-font-size: 14px;" />
        </HBox>
    </HBox>

    <!-- Application List (Expands to Fill Space) -->
    <ListView fx:id="applicationListView" VBox.vgrow="ALWAYS" style="-fx-padding: 5;" />

    <!-- Back Button -->
    <Button text="Back to Job Offers" onAction="#handleBackToJobOffers" style="-fx-font-size: 14px; -fx-padding: 10;" />

</VBox>
