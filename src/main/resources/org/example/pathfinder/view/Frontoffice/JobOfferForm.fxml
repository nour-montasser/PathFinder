<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.FontWeight?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.pathfinder.Controller.JobOfferFormController"
      style="-fx-background-color: #F5EDE1;
             -fx-padding: 30;
             -fx-border-color: #3B261D;
             -fx-border-width: 2;
             -fx-border-radius: 15;
             -fx-background-radius: 15;
             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" >

    <!-- ScrollPane to make the form scrollable -->
    <ScrollPane fitToWidth="true" prefWidth="600" prefHeight="700" style="-fx-background-color: #F5EDE1FF; -fx-border-color: transparent;">
<VBox alignment="TOP_LEFT" spacing="20.0" style="-fx-padding: 10; -fx-background-color: #F5EDE1FF;">

    <!-- Title -->
    <Label text="Job Offer Form" style="  -fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #3B261D;" />

    <!-- Title Field -->
    <VBox spacing="5">
        <HBox spacing="10">
            <Label text="Title:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3B261D;" />
            <Label fx:id="titleErrorLabel" text="" style="-fx-text-fill: #D32F2F; -fx-font-size: 12px;" />
        </HBox>
        <TextField fx:id="titleField" prefWidth="500.0" style="-fx-background-color: white; -fx-border-color: #3B261D; -fx-border-radius: 5; -fx-padding: 8;" />
    </VBox>

    <!-- Description Field -->
    <VBox spacing="5">
        <HBox spacing="10">
            <Label text="Description:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3B261D;" />
            <Label fx:id="descriptionErrorLabel" text="" style="-fx-text-fill: #D32F2F; -fx-font-size: 12px;" />
        </HBox>
        <TextArea fx:id="descriptionField" prefWidth="500.0" prefHeight="100.0"
                  style="-fx-background-color: white; -fx-border-color: #3B261D; -fx-border-radius: 5; -fx-padding: 8;" />
    </VBox>

    <!-- Type Field -->
    <VBox spacing="5">
        <HBox spacing="10">
            <Label text="Type:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3B261D;" />
            <Label fx:id="typeErrorLabel" text="" style="-fx-text-fill: #D32F2F; -fx-font-size: 12px;" />
        </HBox>
        <ComboBox fx:id="typeComboBox" prefWidth="500.0" style="-fx-background-color: white; -fx-border-color: #3B261D; -fx-border-radius: 5; -fx-padding: 8;" />
    </VBox>

    <!-- Job Field Dropdown -->
    <VBox spacing="5">
        <HBox spacing="10">
            <Label text="Select a Job Offer field:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3B261D;" />
            <Label fx:id="jobFieldErrorLabel" text="" style="-fx-text-fill: #D32F2F; -fx-font-size: 12px;" />
        </HBox>
        <ComboBox fx:id="jobOffersComboBox" prefWidth="500.0" style="-fx-background-color: white; -fx-border-color: #3B261D; -fx-border-radius: 5; -fx-padding: 8;" />
    </VBox>

    <!-- Country Dropdown -->
    <VBox spacing="5">
        <HBox spacing="10">
            <Label text="Select Country:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3B261D;" />
            <Label fx:id="countryErrorLabel" text="" style="-fx-text-fill: #D32F2F; -fx-font-size: 12px;" />
        </HBox>
        <ComboBox fx:id="countryComboBox" prefWidth="500.0" style="-fx-background-color: white; -fx-border-color: #3B261D; -fx-border-radius: 5; -fx-padding: 8;" />
    </VBox>

    <!-- City Dropdown -->
    <VBox spacing="5">
        <HBox spacing="10">
            <Label fx:id="citylabel" text="Select City:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3B261D;" />
            <Label fx:id="cityErrorLabel" text="" style="-fx-text-fill: #D32F2F; -fx-font-size: 12px;" />
        </HBox>
        <ComboBox fx:id="cityComboBox" prefWidth="500.0" style="-fx-background-color: white; -fx-border-color: #3B261D; -fx-border-radius: 5; -fx-padding: 8;" visible="false" />
    </VBox>

    <!-- Number of Spots -->
    <VBox spacing="5">
        <HBox spacing="10">
            <Label text="Number of Spots:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3B261D;" />
            <Label fx:id="numberOfSpotsErrorLabel" text="" style="-fx-text-fill: #D32F2F; -fx-font-size: 12px;" />
        </HBox>
        <TextField fx:id="numberOfSpotsField" prefWidth="500.0" style="-fx-background-color: white; -fx-border-color: #3B261D; -fx-border-radius: 5; -fx-padding: 8;" />
    </VBox>

    <!-- Required Education -->
    <VBox spacing="5">
        <HBox spacing="10">
            <Label text="Required Education:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3B261D;" />
            <Label fx:id="requiredEducationErrorLabel" text="" style="-fx-text-fill: #D32F2F; -fx-font-size: 12px;" />
        </HBox>
        <ComboBox fx:id="requiredEducationField" prefWidth="500.0" style="-fx-background-color: white; -fx-border-color: #3B261D; -fx-border-radius: 5; -fx-padding: 8;">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="High School"/>
                    <String fx:value="Bachelor's Degree"/>
                    <String fx:value="Licence"/>
                    <String fx:value="Master's Degree"/>
                    <String fx:value="Doctorate"/>
                    <String fx:value="Postdoc"/>
                    <String fx:value="PhD"/>
                </FXCollections>
            </items>
        </ComboBox>
    </VBox>

    <!-- Required Experience -->
    <VBox spacing="5">
        <HBox spacing="10">
            <Label text="Required Experience:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3B261D;" />
            <Label fx:id="requiredExperienceErrorLabel" text="" style="-fx-text-fill: #D32F2F; -fx-font-size: 12px;" />
        </HBox>
        <TextField fx:id="requiredExperienceField" prefWidth="500.0" style="-fx-background-color: white; -fx-border-color: #3B261D; -fx-border-radius: 5; -fx-padding: 8;" />
    </VBox>

    <!-- Skills Field -->
    <VBox spacing="5">
        <HBox spacing="10">
            <Label text="Skills:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3B261D;" />
            <Label fx:id="skillsErrorLabel" text="" style="-fx-text-fill: #D32F2F; -fx-font-size: 12px;" />
        </HBox>
        <TextField fx:id="skillsField" prefWidth="500.0" style="-fx-background-color: white; -fx-border-color: #3B261D; -fx-border-radius: 5; -fx-padding: 8;" />
    </VBox>

</VBox>
</ScrollPane>

<Region prefHeight="20.0"/>  <!-- Spacer -->

        <!-- Buttons -->
<HBox spacing="20.0" alignment="CENTER">
<Button fx:id="saveButton" text="Save" onAction="#handleSubmitButtonClick"
        style="-fx-background-color: #3B261D; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);" />
<Button fx:id="cancelButton" text="Cancel" onAction="#handleCancelButtonClick"
        style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);" />
</HBox>

        </VBox>