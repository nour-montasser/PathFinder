<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.FontWeight?>

<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.pathfinder.Controller.JobOfferApplicationFormController"
      style="-fx-background-color: #F5EDE1;
             -fx-padding: 30;
             -fx-border-color: #3B261D;
             -fx-border-width: 2;
             -fx-border-radius: 15;
             -fx-background-radius: 15;
             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

    <!-- Title -->
    <Label text="Job Offer Application" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #3B261D; -fx-font-family: 'Segoe UI';"/>

        <!-- CV Selection -->
<VBox spacing="5">
<HBox spacing="10">
    <Label text="Select CV:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3B261D; -fx-font-family: 'Segoe UI';"/>
    <Label fx:id="cvErrorLabel" text="" style="-fx-text-fill: #D32F2F; -fx-font-size: 12px;"/>
</HBox>
<ComboBox fx:id="cvDropdown" prefWidth="500.0" style="-fx-background-color: white; -fx-border-color: #3B261D; -fx-border-radius: 8; -fx-font-family: 'Segoe UI'; -fx-padding: 8;"/>
</VBox>

        <!-- Cover letter subject -->
<VBox spacing="5">
<HBox spacing="10">
    <Label text="Cover Letter Title:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3B261D; -fx-font-family: 'Segoe UI';"/>
    <Label fx:id="coverLetterTitleErrorLabel" text="" style="-fx-text-fill: #D32F2F; -fx-font-size: 12px;"/>
</HBox>
<TextField fx:id="CoverLetterField" prefWidth="500.0" style="-fx-background-color: white; -fx-border-color: #3B261D; -fx-border-radius: 8; -fx-font-family: 'Segoe UI'; -fx-padding: 8;"/>
</VBox>

        <!-- Cover Letter Field -->
<VBox spacing="5">
<HBox spacing="10">
    <Label text="Cover Letter:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3B261D; -fx-font-family: 'Segoe UI';"/>
    <Label fx:id="coverLetterErrorLabel" text="" style="-fx-text-fill: #D32F2F; -fx-font-size: 12px;"/>
</HBox>
<TextArea fx:id="coverLetterField" prefWidth="500.0" prefHeight="300.0" wrapText="true"
          style="-fx-background-color: white; -fx-border-color: #3B261D; -fx-border-radius: 8; -fx-font-family: 'Segoe UI'; -fx-padding: 8;"/>
</VBox>

        <!-- Buttons -->
<Region prefHeight="20.0"/>  <!-- Spacer -->
<HBox spacing="20.0" alignment="CENTER" style="-fx-font-family: 'Segoe UI';">
<Button fx:id="generateCoverLetterButton" text="Generate Cover Letter âœ¨"
        style="-fx-background-color: #5b3f29; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 24;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);"
        onAction="#handleGenerateCoverLetter"
        onMouseEntered="#buttonHover" onMouseExited="#buttonExit"/>
<Button fx:id="applyButton" text="Apply"
        style="-fx-background-color: #3b261d; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 24;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);"
        onAction="#handleApplyButtonClick"
        onMouseEntered="#buttonHover" onMouseExited="#buttonExit"/>
<Button fx:id="cancelButton" text="Cancel"
        style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 24;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);"
        onAction="#handleCancelButtonClick"
        onMouseEntered="#buttonHover" onMouseExited="#buttonExit"/>
</HBox>
        </VBox>