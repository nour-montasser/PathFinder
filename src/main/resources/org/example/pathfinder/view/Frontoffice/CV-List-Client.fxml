<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="700" prefWidth="1000" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pathfinder.Controller.CVShowController">

    <!-- Main Container -->
    <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;" VBox.vgrow="ALWAYS">



        <!-- Search Bar, Sorting & Add Button Container -->
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 5; -fx-pref-width: 100%; -fx-alignment: center-right;">
            <!-- Title -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" alignment="CENTER" text="My CVs" />
            <!-- Search Bar -->
            <HBox alignment="CENTER_LEFT" spacing="5" style="-fx-border-color: #ddd; -fx-border-radius: 20; -fx-padding: 5;                          -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3);">

                <!-- Search Icon -->
                <ImageView fx:id="searchIcon" fitHeight="25" fitWidth="25" pickOnBounds="true" preserveRatio="true" />

                <!-- Search Field -->
                <TextField fx:id="searchField" promptText="Search..." style="-fx-background-color: transparent; -fx-border-width: 0; -fx-font-size: 14px;" />
            </HBox>

            <MenuButton fx:id="sortDropdown" text="Sort By"
                        style="-fx-background-color: transparent;
                   -fx-border-width: 0;
                   -fx-font-size: 14px;
                   -fx-border-radius: 20;
                   -fx-padding: 5;
                   -fx-border-color: #ddd;"
                        minWidth="150" maxWidth="150"
                        minHeight="35" maxHeight="100">
            </MenuButton>

            <!-- Add New CV Button -->
            <Button fx:id="addCVButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;                            -fx-font-weight: bold; -fx-padding: 8 15; -fx-border-radius: 20; -fx-alignment: center; -fx-spacing: 5;" text="ADD NEW CV">
                <graphic>
                    <ImageView fx:id="addIcon" fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true" />
                </graphic>
            </Button>

        </HBox>

        <!-- Grid to Display CVs -->
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-border-color: transparent;" VBox.vgrow="ALWAYS">
            <GridPane fx:id="cvGridPane" alignment="CENTER" hgap="20" style="-fx-padding: 20;" vgap="20">

                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="200" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="200" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="200" />
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints minHeight="400" prefHeight="400" vgrow="ALWAYS" />
                    <RowConstraints minHeight="400" prefHeight="400" vgrow="ALWAYS" />
                </rowConstraints>

                <!-- Dynamic CV Items will be inserted here -->
            </GridPane>
        </ScrollPane>

    </VBox>

    <!-- ðŸ”¥ Delete Confirmation Modal -->
    <StackPane fx:id="deleteConfirmationOverlay" style="-fx-background-color: rgba(0, 0, 0, 0.5); -fx-alignment: center;" visible="false">

        <!-- Modal Box -->
        <VBox fx:id="deleteConfirmationModal" alignment="CENTER" maxHeight="200" maxWidth="350" spacing="15" style="-fx-background-color: white;                          -fx-padding: 20;                          -fx-border-radius: 8;                          -fx-effect: dropshadow(gaussian, black, 10, 0, 0, 0);">

            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Are you sure you want to delete this CV?" />

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="confirmDeleteButton" style="-fx-background-color: #ff5555; -fx-text-fill: white;" text="Yes" />
                <Button fx:id="cancelDeleteButton" style="-fx-background-color: #dddddd; -fx-text-fill: black;" text="No" />
            </HBox>

        </VBox>
    </StackPane>
</StackPane>