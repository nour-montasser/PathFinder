    <!-- Title Section -->
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #6d4c41; -fx-padding: 15px; -fx-border-radius: 10px;">
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" text="Question Phase" />
        </VBox>
    </top>

    <!-- Main Content Layout -->
    <center>
        <GridPane alignment="CENTER" hgap="30" style="-fx-padding: 30px;" vgap="30">

            <!-- Left Section: Question Form -->
            <VBox prefHeight="482.0" prefWidth="346.0" spacing="20" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS">
                <Label prefHeight="42.0" prefWidth="239.0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #6d4c41;" text="Create a New Question" />

                <!-- Question Input -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 10px; -fx-padding: 15px;">
                    <Label style="-fx-font-weight: bold;" text="Question" />
                    <TextField fx:id="questionField" prefWidth="350" />
                </VBox>

                <!-- Responses Input -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 10px; -fx-padding: 15px;">
                    <Label style="-fx-font-weight: bold;" text="Responses (comma-separated):" />
                    <TextField fx:id="responseField" />
                    <Label style="-fx-font-weight: bold;" text="Correct Response:" />
                    <TextField fx:id="correctResponseField" />
                </VBox>

                <!-- Score Input -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 10px; -fx-padding: 15px;">
                    <Label style="-fx-font-weight: bold;" text="Score:" />
                    <TextField fx:id="scoreField" prefWidth="150" />
                </VBox>

                <!-- âœ… Fixed Button Placement: Now Below the Form -->
                <VBox alignment="CENTER" spacing="10">
                    <HBox alignment="CENTER" spacing="10">
                        <Button onAction="#updateQuestionNotBase" style="-fx-background-color: #c19d7b; -fx-text-fill: black; -fx-padding: 10px; -fx-border-radius: 8px;" text="Update Question" />
                        <Button onAction="#addQuestion" style="-fx-background-color: #708671; -fx-text-fill: white; -fx-padding: 10px; -fx-border-radius: 8px;" text="Add Question" />
                        <Button onAction="#goToAIGeneratedSkillTest" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px; -fx-border-radius: 8px;" text="AI Generate Test" />
                    </HBox>

                    <HBox alignment="CENTER" spacing="10">
                        <Button onAction="#clearFields" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-padding: 10px; -fx-border-radius: 8px;" text="Clear Fields" />
                    </HBox>
                </VBox>

            </VBox>

            <!-- Right Section: Question List & Navigation -->
            <VBox spacing="15" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #6d4c41;" text="Question List:" />
                <ListView fx:id="questionListView" prefHeight="250" style="-fx-border-color: #c19d7b; -fx-background-color: white; -fx-border-radius: 10px;" />

                <!-- Go to Skill Test Button -->
                <Button onAction="#goToSkillTestScreen" style="-fx-background-color: #6d4c41; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px; -fx-border-radius: 8px;" text="Go to Skill Test" />
            </VBox>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>

        </GridPane>
    </center>
