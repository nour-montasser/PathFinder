<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.ComboBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10" style="-fx-padding: 100 20 20 20" fx:controller="org.example.pathfinder.Controller.JobOfferApplicationListController">

    <!-- Job Offer Details Section -->
    <Label fx:id="jobOfferTitle"
           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-padding: 10 0; -fx-font-family: 'Segoe UI', sans-serif;" />

    <Label fx:id="jobOfferDescription"
           wrapText="true"
           style="-fx-text-fill: #7f8c8d; -fx-font-size: 16px; -fx-padding: 5 0; -fx-font-family: 'Segoe UI', sans-serif;" />

    <Label fx:id="requiredEducationLabel"
           style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif;" />

    <Label fx:id="requiredExperienceLabel"
           style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif;" />

    <Label fx:id="skillsLabel"
           style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif;" />

    <!-- Applications Section -->
    <Label text="Applications"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-padding: 10 0; -fx-font-family: 'Segoe UI', sans-serif;" />

    <!-- Search & Filter Section -->
    <HBox spacing="10" alignment="CENTER" style="-fx-padding: 5; -fx-pref-width: 100%;">

        <!-- Search Bar -->
        <HBox spacing="5" alignment="CENTER_LEFT"
              style="-fx-border-color: #ddd; -fx-border-radius: 20; -fx-padding: 5;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3);">
            <ImageView fx:id="searchIcon" fitWidth="25" fitHeight="25" pickOnBounds="true" preserveRatio="true"/>
            <TextField fx:id="searchField" promptText="Search..."
                       style="-fx-background-color: transparent; -fx-border-width: 0; -fx-font-size: 14px;"/>
        </HBox>

        <!-- Status Filter Dropdown -->
        <ComboBox fx:id="statusFilterComboBox" promptText="Filter by status"
                  style="-fx-font-size: 14px; -fx-background-color: transparent; -fx-border-width: 0; -fx-border-radius: 20; -fx-padding: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3);" />
    </HBox>

    <!-- Applications List -->
    <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
        <ListView fx:id="applicationsListView"
                  style="-fx-background-color: transparent; -fx-border-radius: 5; -fx-background-insets: 0; -fx-font-family: 'Segoe UI', sans-serif; -fx-padding: 7" />
    </ScrollPane>

    <!-- Close Button -->
    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding-top: 5;">
        <Button text="Close" onAction="#handleClose"
                style="-fx-background-color: #333333; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12 24; -fx-border-radius: 5;
                       -fx-font-family: 'Segoe UI', sans-serif; -fx-cursor: hand; -fx-background-insets: 0;" />
    </HBox>

</VBox>
