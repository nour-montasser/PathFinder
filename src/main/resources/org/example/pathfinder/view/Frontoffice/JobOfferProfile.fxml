<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ScrollPane?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="20" style="-fx-padding: 20; -fx-background-color: rgba(245,245,245,0);" fx:controller="org.example.pathfinder.Controller.JobOfferProfileController">
    <!-- Close Button -->
    <HBox alignment="TOP_LEFT" style="-fx-padding: 0;">
        <Button fx:id="closeButton" text="Close" onAction="#handleClose"
                style="-fx-background-color: #3b261d; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12 24; -fx-background-radius: 5;
                       -fx-font-family: 'Segoe UI', sans-serif; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3);
                       -fx-background-insets: 0;" />
    </HBox>

    <!-- Main Content: Single Column -->
    <VBox spacing="20" style="-fx-padding: 0;" VBox.vgrow="ALWAYS">
        <!-- Job Offer Details Section -->
        <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(51,51,51,0.08), 5, 0, 0, 3);" VBox.vgrow="ALWAYS">
            <!-- Job Offer Title -->
            <Label text="Job Offer Details"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #150e0d; -fx-font-family: 'Segoe UI', sans-serif;" />

            <!-- Company Info Section -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <!-- Company Image -->
                <ImageView fx:id="companyImage" fitWidth="50" fitHeight="50" preserveRatio="true"
                           style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3);" />

                <!-- Company Name and Address -->
                <VBox spacing="5">
                    <Label fx:id="companyName"
                           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #150e0d; -fx-font-family: 'Segoe UI', sans-serif;" />
                    <Label fx:id="companyAddress"
                           style="-fx-text-fill: #777777; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif;" />
                </VBox>
            </HBox>

            <!-- Job Title and Description -->
            <Label fx:id="jobOfferTitle"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #150e0d; -fx-font-family: 'Segoe UI', sans-serif;" />

            <Label fx:id="jobOfferDescription"
                   wrapText="true"
                   style="-fx-text-fill: #777777; -fx-font-size: 15px; -fx-font-family: sans-serif;" />

            <!-- Required Details -->
            <VBox spacing="5" style="-fx-padding: 10 0;">
                <Label fx:id="requiredEducationLabel"
                       style="-fx-text-fill: #777777; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif;" />

                <Label fx:id="requiredExperienceLabel"
                       style="-fx-text-fill: #777777; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif;" />

                <Label fx:id="skillsLabel"
                       style="-fx-text-fill: #777777; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif;" />

                <Label fx:id="numberOfSpotsLabel"
                       style="-fx-text-fill: #777777; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif;" />
            </VBox>

            <!-- Apply Button -->
            <Button fx:id="applyButton" text="Apply" onAction="#handleApply"
                    style="-fx-background-color: #3B261DFF; -fx-text-fill: white;
                       -fx-border-radius: 5; -fx-font-size: 14px;
                       -fx-effect: innershadow(gaussian, rgba(0, 0, 0, 0.3), 5, 0, 0, 1);
                       -fx-cursor: hand;"/>
        </VBox>

        <!-- My Application Section -->
        <VBox fx:id="applicationCard" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(51,51,51,0.08), 5, 0, 0, 3);" VBox.vgrow="ALWAYS">
            <!-- Applications Section Title -->
            <Label text="My Application" fx:id="myApplicationLabel"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #150e0d; -fx-padding: 2 0; -fx-font-family: 'Segoe UI', sans-serif;" />

            <!-- Application Card -->
            <VBox  spacing="10" style="-fx-padding: 10;">
                <!-- If the user has applied, show CV ID, Application Time, and Cover Letter Subject -->
                <Label fx:id="cvIdLabel" style="-fx-text-fill: #777777; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif;" />
                <Label fx:id="applicationTimeLabel" style="-fx-text-fill: #777777; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif;" />
                <Label fx:id="coverLetterSubjectLabel" style="-fx-text-fill: #777777; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif;" />
            </VBox>
        </VBox>
    </VBox>
</VBox>