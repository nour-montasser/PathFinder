<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10"
      style="-fx-padding: 10; -fx-border-color: transparent; -fx-border-radius: 10; -fx-background-color: white;
             -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);
             -fx-background-radius: 10;"
      fx:controller="org.example.pathfinder.Controller.JobOfferListCardController"
      focusTraversable="false"
      fx:id="cardContainer"
      onMouseEntered="#onCardHover"
      onMouseExited="#onCardExit">

    <HBox spacing="15">
        <ImageView fx:id="companyImage" fitWidth="100" fitHeight="100"
                   style="-fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 5, 0, 0, 3);"/>
        <VBox spacing="5">
            <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;
                                           -fx-cursor: hand;"
                   onMouseEntered="#onMouseEnterTitle" onMouseExited="#onMouseExitTitle"/>
            <Label fx:id="addressLabel" wrapText="true" style="-fx-text-fill: #777777; font-size: 14px;" />
            <Label fx:id="descriptionLabel" wrapText="true" style="-fx-text-fill: #777777; font-size: 14px;" />
            <Label fx:id="numberOfSpotsLabel" wrapText="true" style="-fx-text-fill: #777777; font-size: 14px;"/>
        </VBox>

        <!-- Align buttons and dropdown menu to the right -->
        <HBox spacing="10" alignment="TOP_RIGHT" style="-fx-alignment: center-right;">
            <Button fx:id="menuButton" text="â–¼"
                    style="-fx-background-color: transparent; -fx-text-fill: black;
                           -fx-font-size: 18px; -fx-padding: 5; -fx-cursor: hand;"
                   />
        </HBox>
    </HBox>

    <HBox alignment="BOTTOM_RIGHT">
        <Button fx:id="applyButton" text="Apply" onAction="#handleApply"
                style="-fx-background-color: #3B261DFF; -fx-text-fill: white;
                       -fx-border-radius: 5; -fx-font-size: 14px;
                       -fx-effect: innershadow(gaussian, rgba(0, 0, 0, 0.3), 5, 0, 0, 1);
                       -fx-cursor: hand;"
                onMouseEntered="#onMouseEnterButton" onMouseExited="#onMouseExitButton"/>
    </HBox>

    <VBox fx:id="additionalDetails" spacing="5"
          style="-fx-padding: 10; background-color: #F7F7F7; border-radius: 5px; -fx-border-color: #DDD;">
        <Label fx:id="requiredEducationLabel" style="-fx-text-fill: #555555; font-size: 14px;" />
        <Label fx:id="requiredExperienceLabel" style="-fx-text-fill: #555555; font-size: 14px;" />
        <Label fx:id="skillsLabel" style="-fx-text-fill: #555555; font-size: 14px;" />
    </VBox>
</VBox>
