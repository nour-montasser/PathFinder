<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pathfinder.Controller.ApplicationListController"
      spacing="15" style="-fx-padding: 100 20 20 20" >

    <!-- Title -->
    <Label text="My Applications" style="-fx-font-size: 24px; -fx-font-weight: bold; " />

    <!-- Search Bar -->
    <HBox alignment="CENTER" spacing="10" style="-fx-padding: 5; -fx-alignment: center-right;">
        <HBox alignment="CENTER_LEFT" spacing="5"
              style="-fx-border-color: #ddd; -fx-border-radius: 20; -fx-padding: 5;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3);">
            <ImageView fx:id="searchIcon" fitHeight="25" fitWidth="25" pickOnBounds="true" preserveRatio="true" />
            <TextField fx:id="searchField" promptText="Search..."
                       style="-fx-background-color: transparent; -fx-border-width: 0; -fx-font-size: 14px;" />
        </HBox>
    </HBox>

    <!-- Application List (Expands to Fill Space) -->
    <ListView fx:id="applicationListView" VBox.vgrow="ALWAYS" style="-fx-padding: 5;" />

    <!-- Back Button -->
    <Button text="Back to Job Offers" onAction="#handleBackToJobOffers" style="-fx-background-color: #3b261d; /* Green background */     -fx-text-fill: white;           /* White text */     -fx-font-size: 16px;            /* Font size */     -fx-font-weight: bold;          /* Bold text */     -fx-padding: 10px 20px;         /* Padding around the text */     -fx-border-radius: 25px;       /* Rounded corners */     -fx-cursor: hand;              /* Cursor to indicate a clickable button */     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2); /* Shadow effect */" />

</VBox>
