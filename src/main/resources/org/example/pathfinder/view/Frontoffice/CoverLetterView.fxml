<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.FontWeight?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.pathfinder.Controller.CoverLetterViewController"
      alignment="CENTER" spacing="20.0"
      prefWidth="500" prefHeight="700"
      style="-fx-background-color: #F5EDE1;
             -fx-padding: 30;
             -fx-border-color: #3B261D;
             -fx-border-width: 2;
             -fx-border-radius: 15;
             -fx-background-radius: 15;
             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

    <!-- Cover Letter Title -->
    <Label text="Cover Letter" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #3B261D; -fx-font-family: 'Segoe UI';"/>

        <!-- Cover Letter Subject -->
<Label fx:id="coverLetterSubject" wrapText="true" style="-fx-font-size: 18px; -fx-text-fill: #3B261D; -fx-font-family: 'Segoe UI';"/>

        <!-- Scrollable Cover Letter Content -->
<ScrollPane fitToWidth="true" prefHeight="500" maxHeight="500" style="-fx-background-color: transparent; -fx-border-color: transparent;">
<Label fx:id="coverLetterContent" wrapText="true" style="-fx-font-size: 16px; -fx-text-fill: #3B261D; -fx-font-family: 'Segoe UI';"/>
</ScrollPane>

        <!-- Buttons Section -->
<HBox spacing="20.0" alignment="CENTER" style="-fx-font-family: 'Segoe UI';">
<!-- Generate PDF Button -->
<Button text="Generate PDF"
        style="-fx-background-color: #3B261D; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 24;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);"
        onAction="#handleGeneratePdfButtonClick" />

<!-- Close Button -->
<Button text="Close"
        style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 24;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);"
        onAction="#handleCloseButtonClick" />
</HBox>

        </VBox>