<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pathfinder.Controller.ApplicationMeetSetupController"
      spacing="20" alignment="CENTER" style="-fx-background-color: #f4f4f4; -fx-padding: 20;">

    <!-- Title -->
    <Label text="Schedule Google Meet Interview"
           style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-padding: 0 0 10 0;"/>

    <!-- Radio Buttons for Scheduling Options -->
    <VBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
        <RadioButton fx:id="startNowRadio" text="Start Meeting Now" selected="true"
                     style="-fx-font-size: 14; -fx-text-fill: #555555;"/>
        <RadioButton fx:id="scheduleLaterRadio" text="Schedule Meeting for Later"
                     style="-fx-font-size: 14; -fx-text-fill: #555555;"/>
    </VBox>

    <!-- Date and Time Picker (Visible only if "Schedule Meeting for Later" is selected) -->
    <HBox fx:id="scheduleLaterBox" visible="false" spacing="10" alignment="CENTER" style="-fx-padding: 0 0 10 0;">
        <DatePicker fx:id="datePicker" promptText="Select Date"
                    style="-fx-font-size: 14; -fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5;"/>
        <TextField fx:id="timeField" promptText="HH:mm"
                   style="-fx-font-size: 14; -fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5;"/>
    </HBox>

    <!-- Buttons -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Submit" onAction="#handleSubmit"
                style="-fx-font-size: 14; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;"/>
        <Button text="Don't Send Meet Link" onAction="#handleCancel"
                style="-fx-font-size: 14; -fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;"/>
    </HBox>
</VBox>