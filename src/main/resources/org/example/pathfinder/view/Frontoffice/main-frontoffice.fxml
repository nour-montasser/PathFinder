<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.6"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.pathfinder.Controller.FrontofficeController"
      style="-fx-background-color: #F5EDE1; -fx-pref-width: 100%; -fx-pref-height: 100%;">


    <!-- ðŸ”¹ NAVBAR (Always on Top) -->
    <HBox spacing="80"
          style="-fx-background-color: #3B261D; -fx-padding: 15px 50px; -fx-pref-height: 60px; -fx-pref-width: 100%;
                 -fx-border-bottom: 2px solid #F5E4C3;"> <!-- Adds a subtle border for better separation -->

        <!-- Left Menu Items (With Clickable Buttons) -->
        <HBox alignment="CENTER_LEFT" spacing="50" HBox.hgrow="ALWAYS"
              style="-fx-padding: 0 30px; -fx-pref-width: 250px;">
            <Button fx:id="homeButton" text="HOME" onAction="#loadHomePage"
                    style="-fx-background-color: transparent; -fx-text-fill: #F5E4C3;
                           -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-width: 0;
                           -fx-padding: 10px 20px; -fx-cursor: hand;"/>
            <Button fx:id="freelanceButton" text="FREELANCE" onAction="#loadFreelancePage"
                    style="-fx-background-color: transparent; -fx-text-fill: #F5E4C3;
                           -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-width: 0;
                           -fx-padding: 10px 20px; -fx-cursor: hand;"/>
            <Button fx:id="findJobButton" text="FIND A JOB" onAction="#loadFindJobPage"
                    style="-fx-background-color: transparent; -fx-text-fill: #F5E4C3;
                           -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-width: 0;
                           -fx-padding: 10px 20px; -fx-cursor: hand;"/>
        </HBox>



        <!-- Right Menu Items -->
        <HBox alignment="CENTER_RIGHT" spacing="50" HBox.hgrow="ALWAYS"
              style="-fx-padding: 0 30px; -fx-pref-width: 250px;">
            <Button fx:id="profileButton" text="PROFILE" onAction="#loadProfilePage"
                    style="-fx-background-color: transparent; -fx-text-fill: #F5E4C3;
                           -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-width: 0;
                           -fx-padding: 10px 20px; -fx-cursor: hand;"/>
            <Button fx:id="messagesButton" text="MESSAGES" onAction="#loadMessagesPage"
                    style="-fx-background-color: transparent; -fx-text-fill: #F5E4C3;
                           -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-width: 0;
                           -fx-padding: 10px 20px; -fx-cursor: hand;"/>
            <Button fx:id="helpButton" text="CVs" onAction="#loadHelpPage"
                    style="-fx-background-color: transparent; -fx-text-fill: #F5E4C3;
                           -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-width: 0;
                           -fx-padding: 10px 20px; -fx-cursor: hand;"/>
        </HBox>

    </HBox>

    <!-- ðŸ”¹ MAIN CONTENT (Centered Below Navbar) -->
    <StackPane fx:id="contentArea" VBox.vgrow="ALWAYS"
               style="-fx-background-color: #F5EDE1; -fx-pref-height: 100%; -fx-alignment: center;">
    </StackPane>

</VBox>