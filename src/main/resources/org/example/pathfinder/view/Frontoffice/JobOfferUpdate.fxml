<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<VBox alignment="TOP_LEFT" spacing="12.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.pathfinder.Controller.JobOfferUpdateController"
      style="-fx-background-color: #f4f4f4;
             -fx-padding: 25;
             -fx-border-color: #333;
             -fx-border-width: 2;
             -fx-border-radius: 10;
             -fx-background-radius: 10;
             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">

    <!-- Title -->
    <Label text="Job Offer Form" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <!-- Title Field -->
    <Label text="Title:" style="-fx-font-weight: bold;" />
    <TextField fx:id="titleField" prefWidth="500.0" style="-fx-border-color: #ccc; -fx-border-radius: 5;" />

    <!-- Description Field -->
    <Label text="Description:" style="-fx-font-weight: bold;" />
    <TextArea fx:id="descriptionField" prefWidth="500.0" prefHeight="100.0"
              style="-fx-border-color: #ccc; -fx-border-radius: 5;" />

    <!-- Type Field -->
    <Label text="Type:" style="-fx-font-weight: bold;" />
    <ComboBox fx:id="typeComboBox" prefWidth="250.0"
              style="-fx-border-color: #ccc; -fx-border-radius: 5;" />

    <!-- Number of Spots -->
    <Label text="Number of Spots:" style="-fx-font-weight: bold;" />
    <TextField fx:id="numberOfSpotsField" prefWidth="100.0"
               style="-fx-border-color: #ccc; -fx-border-radius: 5;" />

    <!-- Required Education -->
    <Label text="Required Education:" style="-fx-font-weight: bold;" />
    <TextField fx:id="requiredEducationField" prefWidth="500.0"
               style="-fx-border-color: #ccc; -fx-border-radius: 5;" />

    <!-- Required Experience -->
    <Label text="Required Experience:" style="-fx-font-weight: bold;" />
    <TextField fx:id="requiredExperienceField" prefWidth="500.0"
               style="-fx-border-color: #ccc; -fx-border-radius: 5;" />

    <!-- Skills Field -->
    <Label text="Skills:" style="-fx-font-weight: bold;" />
    <TextField fx:id="skillsField" prefWidth="500.0"
               style="-fx-border-color: #ccc; -fx-border-radius: 5;" />

    <!-- Buttons -->
    <Region prefHeight="10.0"/>  <!-- Spacer -->
    <HBox spacing="15.0" alignment="CENTER">
        <Button fx:id="saveButton" text="Save" onAction="#handleSubmitButtonClick"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-background-radius: 8; -fx-padding: 8 16;" />
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancelButtonClick"
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-background-radius: 8; -fx-padding: 8 16;" />
    </HBox>

</VBox>
