<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ScrollPane?>

<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<VBox alignment="TOP_LEFT" spacing="12.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.pathfinder.Controller.JobOfferUpdateController"
      style="-fx-background-color: #f4f4f4;
             -fx-padding: 25;
             -fx-border-color: #333;
             -fx-border-width: 2;
             -fx-border-radius: 10;
             -fx-background-radius: 10;
             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">

    <!-- ScrollPane to make the form scrollable -->
    <ScrollPane fitToWidth="true" prefWidth="500" prefHeight="650" style="-fx-background-color: transparent; -fx-border-color: transparent;">
        <VBox alignment="TOP_LEFT" spacing="12.0">

            <!-- Title -->
            <Label text="Job Offer Form" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <!-- Title Field -->
            <HBox spacing="10">
                <Label text="Title:" style="-fx-font-weight: bold;" />
                <Label fx:id="titleErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;" />
            </HBox>
            <TextField fx:id="titleField" prefWidth="500.0" style="-fx-border-color: #ccc; -fx-border-radius: 5;" />

            <!-- Description Field -->
            <HBox spacing="10">
                <Label text="Description:" style="-fx-font-weight: bold;" />
                <Label fx:id="descriptionErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;" />
            </HBox>
            <TextArea fx:id="descriptionField" prefWidth="500.0" prefHeight="100.0"
                      style="-fx-border-color: #ccc; -fx-border-radius: 5;" />

            <!-- Type Field -->
            <HBox spacing="10">
                <Label text="Type:" style="-fx-font-weight: bold;" />
                <Label fx:id="typeErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;" />
            </HBox>
            <ComboBox fx:id="typeComboBox" prefWidth="250.0" style="-fx-border-color: #ccc; -fx-border-radius: 5;" />

            <!-- Job Field Dropdown -->
            <HBox spacing="10">
                <Label text="Select a Job Offer field:" style="-fx-font-weight: bold;" />
                <Label fx:id="jobFieldErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;" />
            </HBox>
            <ComboBox fx:id="jobOffersComboBox" prefWidth="250.0" style="-fx-border-color: #ccc; -fx-border-radius: 5;" />

            <!-- Country Dropdown -->
            <HBox spacing="10">
                <Label text="Select Country:" style="-fx-font-weight: bold;" />
                <Label fx:id="countryErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;" />
            </HBox>
            <ComboBox fx:id="countryComboBox" prefWidth="250.0" style="-fx-border-color: #ccc; -fx-border-radius: 5;" />

            <!-- City Dropdown -->
            <HBox spacing="10">
                <Label fx:id="citylabel" text="Select City:" style="-fx-font-weight: bold;" />
                <Label fx:id="cityErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;" />
            </HBox>
            <ComboBox fx:id="cityComboBox" prefWidth="250.0" style="-fx-border-color: #ccc; -fx-border-radius: 5;" visible="false" />

            <!-- Number of Spots -->
            <HBox spacing="10">
                <Label text="Number of Spots:" style="-fx-font-weight: bold;" />
                <Label fx:id="numberOfSpotsErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;" />
            </HBox>
            <TextField fx:id="numberOfSpotsField" prefWidth="100.0" style="-fx-border-color: #ccc; -fx-border-radius: 5;" />

            <!-- Required Education -->
            <HBox spacing="10">
                <Label text="Required Education:" style="-fx-font-weight: bold;" />
                <Label fx:id="requiredEducationErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;" />
            </HBox>
            <ComboBox fx:id="requiredEducationField" prefWidth="500.0" style="-fx-border-color: #ccc; -fx-border-radius: 5;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="High School"/>
                        <String fx:value="Bachelor's Degree"/>
                        <String fx:value="Licence"/>
                        <String fx:value="Master's Degree"/>
                        <String fx:value="Doctorate"/>
                        <String fx:value="Postdoc"/>
                        <String fx:value="PhD"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- Required Experience -->
            <HBox spacing="10">
                <Label text="Required Experience:" style="-fx-font-weight: bold;" />
                <Label fx:id="requiredExperienceErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;" />
            </HBox>
            <TextField fx:id="requiredExperienceField" prefWidth="500.0" style="-fx-border-color: #ccc; -fx-border-radius: 5;" />

            <!-- Skills Field -->
            <HBox spacing="10">
                <Label text="Skills:" style="-fx-font-weight: bold;" />
                <Label fx:id="skillsErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;" />
            </HBox>
            <TextField fx:id="skillsField" prefWidth="500.0" style="-fx-border-color: #ccc; -fx-border-radius: 5;" />

        </VBox>
    </ScrollPane>

    <Region prefHeight="10.0"/>  <!-- Spacer -->

    <!-- Buttons -->
    <HBox spacing="15.0" alignment="CENTER">
        <Button fx:id="saveButton" text="Save" onAction="#handleSubmitButtonClick"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-background-radius: 8; -fx-padding: 8 16;" />
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancelButtonClick"
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-background-radius: 8; -fx-padding: 8 16;" />
    </HBox>

</VBox>
