<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.input.MouseEvent?>


<?import javafx.scene.control.ComboBox?>


<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.pathfinder.Controller.JobOfferApplicationUpdateController"
      style="-fx-background-color: #f4f7fa;
             -fx-padding: 30;
             -fx-border-color: #ddd;
             -fx-border-width: 1;
             -fx-border-radius: 12;
             -fx-background-radius: 12;
             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

    <!-- Title -->
    <Label text="Job Offer Application" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-font-family: 'Segoe UI';"/>

    <!-- CV Selection -->
    <HBox spacing="10">
        <Label text="Select CV:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-font-family: 'Segoe UI';"/>
        <Label fx:id="cvErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
    </HBox>
    <ComboBox fx:id="cvDropdown" prefWidth="500.0" style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-font-family: 'Segoe UI';"/>

    <!-- Cover letter subject -->
    <HBox spacing="10">
        <Label text="Cover Letter Title:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-font-family: 'Segoe UI';"/>
        <Label fx:id="coverLetterTitleErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
    </HBox>
    <TextField fx:id="CoverLetterField" prefWidth="500.0" style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-font-family: 'Segoe UI';"/>

    <!-- Cover Letter Field -->
    <HBox spacing="10">
        <Label text="Cover Letter:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-font-family: 'Segoe UI';"/>
        <Label fx:id="coverLetterErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
    </HBox>
    <TextArea fx:id="coverLetterField" prefWidth="500.0" prefHeight="300.0" wrapText="true" style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-font-family: 'Segoe UI';"/>

    <!-- Buttons -->
    <Region prefHeight="20.0"/>  <!-- Spacer -->
    <HBox spacing="20.0" alignment="CENTER" style="-fx-font-family: 'Segoe UI';">
        <Button fx:id="generateCoverLetterButton" text="Generate Cover Letter âœ¨"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-background-radius: 8; -fx-padding: 12 24; -fx-font-weight: bold;"
                onAction="#handleGenerateCoverLetter"
                onMouseEntered="#buttonHover" onMouseExited="#buttonExit"/>
        <Button fx:id="applyButton" text="Apply"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-background-radius: 8; -fx-padding: 12 24; -fx-font-weight: bold;"
                onAction="#handleApplyButtonClick"
                onMouseEntered="#buttonHover" onMouseExited="#buttonExit"/>
        <Button fx:id="cancelButton" text="Cancel"
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-background-radius: 8; -fx-padding: 12 24; -fx-font-weight: bold;"
                onAction="#handleCancelButtonClick"
                onMouseEntered="#buttonHover" onMouseExited="#buttonExit"/>
    </HBox>
</VBox>
