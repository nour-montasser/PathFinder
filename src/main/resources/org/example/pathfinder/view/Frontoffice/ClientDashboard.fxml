<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.pathfinder.Controller.ClientDashboardController"
            prefWidth="1200" prefHeight="650"
            style="-fx-background-color: white; -fx-padding: 20px;">

    <!-- HEADER SECTION (Sleek Navigation Bar) -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: white;
                     -fx-padding: 15px;
                     -fx-border-radius: 10px;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 6, 0, 0, 4);">

            <ImageView fx:id="logoImage"
                       fitHeight="40" fitWidth="120"/>


            <!-- "Find Talent" Dropdown -->
            <ComboBox fx:id="currencySelector"
                      promptText="Find Talent"
                      style="-fx-background-color: transparent;
                              -fx-border-width: 0;
                              -fx-text-fill: black;
                              -fx-font-size: 14px;"
                      prefWidth="120"/>

            <!-- "Find Work" Dropdown -->
            <ComboBox fx:id="sortDropdown"
                      promptText="Find Work"
                      style="-fx-background-color: transparent;
                              -fx-border-width: 0;
                              -fx-text-fill: black;
                              -fx-font-size: 14px;"
                      prefWidth="120"/>

            <!-- Spacer to push search bar to the right -->
            <Pane HBox.hgrow="ALWAYS"/>

            <!-- 🔍 Rounded Search Bar with Skills Dropdown -->
            <HBox spacing="8"
                  style="-fx-background-color: white;
                         -fx-border-radius: 25px;
                         -fx-border-color: #ccc;
                         -fx-padding: 6px 14px;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 6, 0, 0, 2);
                         -fx-alignment: center-left;">
                <!-- 🔍 Search Icon -->
                <ImageView fx:id="searchIcon" fitWidth="20" fitHeight="20"/>
                <!-- Search Field -->
                <TextField fx:id="searchField"
                           promptText="Search"
                           style="-fx-background-color: transparent;
                                  -fx-border-width: 0;
                                  -fx-font-size: 14px;
                                  -fx-text-fill: black;"
                           prefWidth="230"/>

                <!-- Skills Dropdown (Inside Search Bar, Transparent) -->
                <ComboBox fx:id="skillsDropdown"
                          promptText="Skills &amp; Expertise"
                          style="-fx-background-color: transparent;
                                 -fx-border-width: 0;
                                 -fx-text-fill: black;
                                 -fx-font-size: 14px;
                                 -fx-padding: 0 10px;"
                          prefWidth="160"/>
            </HBox>
        </HBox>
    </top>

    <!-- MAIN CONTENT: Services Grid -->
    <center>
        <StackPane>
            <ScrollPane fitToWidth="true" fitToHeight="true"
                        style="-fx-background-color: transparent; -fx-padding: 10;">
                <GridPane fx:id="servicesGrid"
                          style="-fx-padding: 20;
                                 -fx-alignment: center;
                                 -fx-background-color: transparent;"
                          hgap="30" vgap="30"/>
            </ScrollPane>
        </StackPane>
    </center>

</BorderPane>
