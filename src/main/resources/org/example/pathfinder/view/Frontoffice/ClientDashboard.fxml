<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.pathfinder.Controller.ClientDashboardController"
            prefWidth="1000" prefHeight="600"
            style="-fx-background-color: #F5F5F5; -fx-padding: 20px;">

    <!-- HEADER SECTION -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-background-color: #512E1B; -fx-padding: 15px; -fx-border-radius: 10px;">

            <Label text="Service Marketplace"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <!-- Spacer to push elements to the right -->
            <Pane HBox.hgrow="ALWAYS"/>

            <Label text="Convert Prices To:" style="-fx-font-weight: bold; -fx-text-fill: #512E1B;"/>
            <ComboBox fx:id="currencySelector" prefWidth="150"/>


            <!-- Search Field -->
            <TextField fx:id="searchField" promptText="Search services..."
                       style="-fx-background-color: transparent; -fx-border-width: 0; -fx-font-size: 14px;"/>


            <!-- Sorting Dropdown -->
            <ComboBox fx:id="sortDropdown"
                      style="-fx-background-color: white ;
                   -fx-border-width: 0;
                   -fx-font-size: 14px;
                   -fx-border-radius: 20;
                   -fx-padding: 5;
                   -fx-border-color: #FFFFFF;"
                      minWidth="150" maxWidth="150"
                      minHeight="35" maxHeight="100">
            </ComboBox>

        </HBox>
    </top>

    <!-- MAIN CONTENT: Services Grid -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true"
                    style="-fx-background-color: transparent; -fx-padding: 10;">
            <GridPane fx:id="servicesGrid"
                      style="-fx-padding: 20; -fx-alignment: center; -fx-background-color: transparent;"
                      hgap="30" vgap="30"/>
        </ScrollPane>
    </center>

</BorderPane>
