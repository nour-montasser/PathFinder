<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.pathfinder.Controller.ApplicationServiceController"
      style="-fx-background-color: #F5EDE1; -fx-padding: 20px;">

    <!-- ðŸŒŸ Updated Navigation Bar (Matches ClientDashboard) -->
    <HBox spacing="20" alignment="CENTER_LEFT"
          style="-fx-background-color: #F5EDE1;
                 -fx-padding: 12px 18px;
                 -fx-border-radius: 12px;
                 -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 6, 0, 0, 2);
                 -fx-alignment: center-left;">

        <!-- Pathfinder Logo -->
        <ImageView fx:id="logoImage" fitHeight="50" preserveRatio="true"/>

        <!-- Currency Selector -->
        <ComboBox fx:id="currencySelector"
                  promptText="Currency"
                  style="-fx-background-color: transparent;
                         -fx-font-size: 15px;
                         -fx-border-width: 0;
                         -fx-text-fill: #3B261D;
                         -fx-padding: 5px 10px;"/>

        <!-- Sorting Dropdown -->
        <ComboBox fx:id="sortDropdown"
                  promptText="Sort Services"
                  style="-fx-background-color: transparent;
                         -fx-font-size: 15px;
                         -fx-border-width: 0;
                         -fx-text-fill: #3B261D;
                         -fx-padding: 5px 10px;"/>

        <!-- Spacer to push elements right -->
        <Pane HBox.hgrow="ALWAYS"/>

        <!-- ðŸ” Updated Search Bar -->
        <HBox spacing="5" alignment="CENTER_LEFT"
              style="-fx-background-color: #F5EDE1;
                     -fx-border-color: #E0D6C9;
                     -fx-border-radius: 20;
                     -fx-padding: 8 14;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 3, 0, 0, 2);">

            <!-- Search Icon Inside -->
            <ImageView fx:id="searchIcon" fitHeight="18" fitWidth="18" style="-fx-opacity: 0.7;"/>

            <!-- Search Field -->
            <TextField fx:id="searchField" promptText="Search services..."
                       style="-fx-background-color: transparent;
                              -fx-border-width: 0;
                              -fx-font-size: 16px;
                              -fx-text-fill: #3B261D;
                              -fx-padding: 2px 5px;"/>
        </HBox>

        <!-- âž• Add New Service Button -->
        <Button fx:id="addServiceButton" text="+"
                onAction="#openServiceForumModal"
                style="-fx-background-color: #3B261D;
                       -fx-text-fill: white;
                       -fx-font-size: 28px;
                       -fx-min-width: 50px;
                       -fx-min-height: 50px;
                       -fx-border-radius: 50%;
                       -fx-font-weight: bold;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 5, 0, 0, 3);"/>
    </HBox>

    <!-- ðŸŒŸ Services Display Section with Correct Background -->
    <StackPane style="-fx-background-color: #F5EDE1;">
        <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true"
                    style="-fx-background-color: transparent; -fx-padding: 10;">
            <VBox style="-fx-background-color: #F5EDE1; -fx-padding: 20;">
                <GridPane fx:id="servicesGrid"
                          style="-fx-padding: 20;
                                 -fx-alignment: center;
                                 -fx-background-color: transparent;"
                          hgap="30" vgap="30"/>
            </VBox>
        </ScrollPane>
    </StackPane>

</VBox>
