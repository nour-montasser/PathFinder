<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.pathfinder.Controller.ApplicationServiceController"
      style="-fx-background-color: #F5F5F5; -fx-padding: 20; -fx-alignment: center;">

    <!-- Search Bar & Add Button Container -->
    <HBox spacing="20" style="-fx-alignment: center-left; -fx-padding: 5;">

        <!-- Search Bar -->
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-border-color: #ddd; -fx-border-radius: 20; -fx-padding: 8;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3);">




            <!-- Search Field -->
            <TextField fx:id="searchField" promptText="Search services..."
                       style="-fx-background-color: transparent; -fx-border-width: 0; -fx-font-size: 14px;"/>
        </HBox>

        <ComboBox fx:id="sortDropdown"
                  promptText="Sort Services"
                  style="-fx-background-color: #FFFFFF; -fx-font-size: 14px;"/>
        <!-- Add New Service Button -->
        <Button fx:id="addServiceButton" text="+" onAction="#openServiceForumModal"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 28px;
                -fx-min-width: 60px; -fx-min-height: 60px; -fx-border-radius: 50%;
                -fx-font-weight: bold;"/>


    </HBox>


    <!-- Services Display -->
    <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true"
                style="-fx-padding: 10; -fx-background: transparent;">
        <GridPane fx:id="servicesGrid"
                  style="-fx-padding: 20; -fx-alignment: center; -fx-background-color: transparent;"
                  hgap="30" vgap="30"/>
    </ScrollPane>

</VBox>
