<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/17.0.6"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.pathfinder.Controller.BackOfficeController"
      style="-fx-background-color: #F5EDE1; -fx-pref-width: 100%; -fx-pref-height: 100%;">

    <!-- ðŸ”¹ MAIN LAYOUT (Split into Left Navbar and Right Content) -->
    <HBox style="-fx-pref-width: 100%; -fx-pref-height: 100%;" VBox.vgrow="ALWAYS">

        <!-- ðŸ”¹ LEFT VERTICAL NAVBAR (Now on the left) -->
        <VBox style="-fx-background-color: #3B261D; -fx-padding: 20px; -fx-pref-width: 250px; -fx-alignment: top_center; -fx-spacing: 20px; -fx-border-right: 2px solid #F5E4C3;" VBox.vgrow="ALWAYS">
            <ImageView fx:id="logoImage" fitWidth="250"  pickOnBounds="true" preserveRatio="true"
                       style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 2);"/>
            <!-- Tabs / Buttons for Navigation -->
            <Button fx:id="usersButton" text="USERS" onAction="#loadUsersPage"
                    style="-fx-background-color: transparent; -fx-text-fill: #F5E4C3; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-width: 0; -fx-padding: 10px 20px; -fx-cursor: hand;"/>
            <Button fx:id="cvsButton" text="CVs" onAction="#loadCVsPage"
                    style="-fx-background-color: transparent; -fx-text-fill: #F5E4C3; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-width: 0; -fx-padding: 10px 20px; -fx-cursor: hand;"/>
            <Button fx:id="jobOffersButton" text="JOB OFFERS" onAction="#loadJobOffersPage"
                    style="-fx-background-color: transparent; -fx-text-fill: #F5E4C3; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-width: 0; -fx-padding: 10px 20px; -fx-cursor: hand;"/>
            <Button fx:id="skillTestsButton" text="SKILL TESTS" onAction="#loadSkillTestsPage"
                    style="-fx-background-color: transparent; -fx-text-fill: #F5E4C3; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-width: 0; -fx-padding: 10px 20px; -fx-cursor: hand;"/>
            <Button fx:id="channelsButton" text="CHANNELS" onAction="#loadChannelsPage"
                    style="-fx-background-color: transparent; -fx-text-fill: #F5E4C3; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-width: 0; -fx-padding: 10px 20px; -fx-cursor: hand;"/>
            <Button fx:id="reportsButton" text="REPORTS" onAction="#loadReportsPage"
                    style="-fx-background-color: transparent; -fx-text-fill: #F5E4C3; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-width: 0; -fx-padding: 10px 20px; -fx-cursor: hand;"/>
            <Button fx:id="freelanceGigsButton" text="FREELANCE GIGS" onAction="#loadFreelanceGigsPage"
                    style="-fx-background-color: transparent; -fx-text-fill: #F5E4C3; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-width: 0; -fx-padding: 10px 20px; -fx-cursor: hand;"/>
        </VBox>

        <!-- ðŸ”¹ RIGHT CONTENT AREA (This will be empty or hold content) -->
        <StackPane fx:id="contentArea" VBox.vgrow="ALWAYS"
                   style="-fx-background-color: #F5EDE1; -fx-pref-width: 80%; -fx-alignment: center;">
            <!-- Dynamic Content Will Be Loaded Here -->
        </StackPane>

    </HBox>
</VBox>
