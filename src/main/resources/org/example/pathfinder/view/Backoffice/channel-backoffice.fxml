<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.pathfinder.Controller.BackOfficeController">
    <children>
        <VBox spacing="20" layoutX="20" layoutY="20" prefWidth="600" prefHeight="600">
            <!-- Title -->
            <Label text="Channel and Message Management" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #3B261D;"/>

            <!-- Channels List -->
            <Label text="Channels" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3B261D;"/>
            <ListView fx:id="channelListView" prefWidth="580" prefHeight="200"
                      style="-fx-background-color: #F5EDE1; -fx-border-color: #F5E4C3; -fx-font-size: 16px;">
                <items>
                    <!-- Dynamically populated channels will appear here -->
                </items>
            </ListView>

            <!-- Messages List -->
            <Label text="Messages" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3B261D;"/>
            <ListView fx:id="messageListView" prefWidth="580" prefHeight="200"
                      style="-fx-background-color: #EDEBF5; -fx-border-color: #C3C5F5; -fx-font-size: 16px;">
                <items>
                    <!-- Dynamically populated messages will appear here -->
                </items>
            </ListView>

            <!-- Buttons -->
            <HBox spacing="20">
                <Button fx:id="deleteChannelButton" text="Delete Selected Channel"
                        style="-fx-background-color: #3b261d; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-cursor: hand; -fx-padding: 10px 20px;"/>
                <Button fx:id="deleteMessageButton" text="Delete Selected Message"
                        style="-fx-background-color: #261d3b; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-cursor: hand; -fx-padding: 10px 20px;"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
