<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="TOP_LEFT" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.pathfinder.Controller.JobOfferUpdateController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Title -->
    <Label text="Job Offer Form" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Title Field -->
    <Label text="Title:" />
    <TextField fx:id="titleField" prefWidth="500.0" />

    <!-- Description Field -->
    <Label text="Description:" />
    <TextArea fx:id="descriptionField" prefWidth="500.0" prefHeight="100.0" />

    <!-- Type Field -->
    <Label text="Type:" />
    <ComboBox fx:id="typeComboBox" prefWidth="200.0" />

    <!-- Number of Spots -->
    <Label text="Number of Spots:" />
    <TextField fx:id="numberOfSpotsField" prefWidth="100.0" />

    <!-- Required Education -->
    <Label text="Required Education:" />
    <TextField fx:id="requiredEducationField" prefWidth="500.0" />

    <!-- Required Experience -->
    <Label text="Required Experience:" />
    <TextField fx:id="requiredExperienceField" prefWidth="500.0" />

    <!-- Skills Field -->
    <Label text="Skills" />
    <TextField fx:id="skillsField" prefWidth="450.0" />

    <!-- Buttons -->
    <HBox spacing="15.0">
        <Button fx:id="saveButton" text="Save" onAction="#handleSubmitButtonClick" />
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancelButtonClick" />
    </HBox>
</VBox>
