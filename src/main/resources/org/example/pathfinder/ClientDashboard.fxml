<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.pathfinder.Controller.ClientDashboardController"
            prefWidth="1200" prefHeight="650"
            style="-fx-background-color: #F5EDE1; -fx-padding: 20px;">

    <!-- HEADER SECTION (Updated Theme) -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: #F5EDE1;
             -fx-padding: 15px;
             -fx-border-radius: 10px;
             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 6, 0, 0, 2);">


            <ImageView fx:id="logoImage"
                       fitHeight="40" fitWidth="120"
                       style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 3);"/>

            <!-- "Find Talent" Dropdown -->
            <ComboBox fx:id="currencySelector"
                      promptText="Find Talent"
                      style="-fx-background-color: transparent;
                              -fx-border-width: 0;
                              -fx-text-fill: white;
                              -fx-font-size: 14px; -fx-padding: 5px;"
                      prefWidth="120"/>

            <!-- "Find Work" Dropdown -->
            <ComboBox fx:id="sortDropdown"
                      promptText="Find Work"
                      style="-fx-background-color: transparent;
                              -fx-border-width: 0;
                              -fx-text-fill: white;
                              -fx-font-size: 14px; -fx-padding: 5px;"
                      prefWidth="120"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <!-- 🔍 Search Bar -->
            <HBox spacing="5" alignment="CENTER_LEFT"
                  style="-fx-background-color:#F5EDE1;
                 -fx-border-color: #E0D6C9;
                 -fx-border-radius: 20;
                 -fx-padding: 8 14;
                 -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 3, 0, 0, 2);">

                <ImageView fx:id="searchIcon" fitWidth="25" fitHeight="25" pickOnBounds="true" preserveRatio="true"/>

                <TextField fx:id="searchField" promptText="Search by Title or Description..."
                           style="-fx-background-color: transparent;
                          -fx-border-width: 0;
                          -fx-font-size: 14px;
                          -fx-text-fill: #3B261D;"/>

                <ComboBox fx:id="skillsDropdown"
                          promptText="Skills &amp; Expertise"
                          style="-fx-background-color: transparent;
                                 -fx-border-width: 0;
                                 -fx-text-fill: black;
                                 -fx-font-size: 14px;
                                 -fx-padding: 0 10px;"
                          prefWidth="160"/>
            </HBox>
        </HBox>
    </top>

    <!-- MAIN CONTENT: Services Grid with Hover Effect -->
    <center>
        <StackPane style="-fx-background-color: #F5EDE1;">  <!-- Beige Background -->
            <ScrollPane fitToWidth="true" fitToHeight="true"
                        style="-fx-background-color: transparent; -fx-padding: 10;">
                <VBox style="-fx-background-color: #F5EDE1; -fx-padding: 20;"> <!-- This ensures correct styling -->
                    <GridPane fx:id="servicesGrid"
                              style="-fx-padding: 20;
                             -fx-alignment: center;
                             -fx-background-color: transparent;"
                              hgap="30" vgap="30"/>
                </VBox>
            </ScrollPane>
        </StackPane>

    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox alignment="CENTER"
              style="-fx-background-color: #3B261D;
                     -fx-padding: 10px;">
            <Label text="© 2024 Pathfinder. All rights reserved."
                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
        </HBox>
    </bottom>
</BorderPane>
