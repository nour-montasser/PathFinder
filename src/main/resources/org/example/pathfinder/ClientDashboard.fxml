<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.pathfinder.Controller.ClientDashboardController"
            prefWidth="1000" prefHeight="600"
            style="-fx-background-color: #F5F5F5; -fx-padding: 20px;">

    <!-- HEADER SECTION -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-background-color: #512E1B; -fx-padding: 15px; -fx-border-radius: 10px;">



            <Label text="Service Marketplace"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <!-- Spacer to push search bar to right -->
            <Pane HBox.hgrow="ALWAYS"/>

            <!-- Search Bar -->
            <TextField fx:id="searchField" promptText="Search services..."
                       style="-fx-padding: 8px; -fx-pref-width: 250px;
                              -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
        </HBox>
    </top>

    <!-- MAIN CONTENT: Services Grid -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true"
                    style="-fx-background-color: transparent; -fx-padding: 10;">
            <GridPane fx:id="servicesGrid"
                      style="-fx-padding: 20px; -fx-hgap: 20px; -fx-vgap: 20px;"/>
        </ScrollPane>
    </center>

</BorderPane>
