<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.pathfinder.Controller.ServiceOffreController"
            prefWidth="1000" prefHeight="600"
            style="-fx-background-color: #F5F5F5; -fx-padding: 20px;">

    <!-- HEADER SECTION -->
    <top>
        <Label text="Manage Services"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #512E1B;
                      -fx-alignment: center; -fx-padding: 10px;"/>
    </top>

    <!-- MAIN CONTENT: Left (Form) & Right (Table) -->
    <center>
        <HBox spacing="20">
            <!-- Left Section: Form -->
            <VBox spacing="12" prefWidth="400">
                <Label text="Title:" style="-fx-font-weight: bold; -fx-text-fill: #512E1B;"/>
                <TextField fx:id="titleField" promptText="Enter title"/>

                <Label text="Description:" style="-fx-font-weight: bold; -fx-text-fill: #512E1B;"/>
                <TextArea fx:id="descriptionField" prefHeight="80" promptText="Enter description"/>

                <Label text="Field:" style="-fx-font-weight: bold; -fx-text-fill: #512E1B;"/>
                <ComboBox fx:id="fieldField" promptText="Select field"/>

                <Label text="Price:" style="-fx-font-weight: bold; -fx-text-fill: #512E1B;"/>
                <TextField fx:id="priceField" promptText="Enter price"/>

                <Label text="Experience:" style="-fx-font-weight: bold; -fx-text-fill: #512E1B;"/>
                <TextField fx:id="requiredExperienceField" promptText="Enter experience"/>

                <Label text="Date Posted:" style="-fx-font-weight: bold; -fx-text-fill: #512E1B;"/>
                <DatePicker fx:id="dateField"/>

                <Label text="Education:" style="-fx-font-weight: bold; -fx-text-fill: #512E1B;"/>
                <TextField fx:id="requiredEducationField" promptText="Enter education level"/>

                <Label text="Skills:" style="-fx-font-weight: bold; -fx-text-fill: #512E1B;"/>
                <TextField fx:id="skillsField" promptText="Enter skills"/>

                <!-- Buttons -->
                <HBox spacing="10">
                    <Button text="Submit" onAction="#handleSubmit"
                            style="-fx-background-color: #6A8283; -fx-text-fill: white;"/>

                </HBox>
            </VBox>

            <!-- Right Section: Table -->
            <TableView fx:id="serviceTable" prefWidth="600" prefHeight="450">
                <columns>
                    <TableColumn text="ID" fx:id="idServiceColumn" prefWidth="50"/>
                    <TableColumn text="User ID" fx:id="idUserColumn" prefWidth="50"/>
                    <TableColumn text="Title" fx:id="titleColumn" prefWidth="120"/>
                    <TableColumn text="Description" fx:id="descriptionColumn" prefWidth="200"/>
                    <TableColumn text="Date" fx:id="dateColumn" prefWidth="100"/>
                    <TableColumn text="Field" fx:id="fieldColumn" prefWidth="100"/>
                    <TableColumn text="Price" fx:id="priceColumn" prefWidth="75"/>
                    <TableColumn text="Experience" fx:id="experienceColumn" prefWidth="100"/>
                    <TableColumn text="Education" fx:id="educationColumn" prefWidth="100"/>
                    <TableColumn text="Skills" fx:id="skillsColumn" prefWidth="150"/>
                    <TableColumn text="Actions" fx:id="actionColumn" prefWidth="100"/>
                </columns>
            </TableView>
        </HBox>
    </center>

</BorderPane>
