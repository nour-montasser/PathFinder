<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.pathfinder.Controller.ChannelMessageController"
      spacing="0">

    <!-- Left Panel - Channels -->
    <VBox styleClass="left-panel" prefWidth="300" spacing="0">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <!-- Search Box Container -->
        <VBox spacing="0" VBox.vgrow="NEVER">
            <TextField fx:id="searchBox" onAction="#handleUserSearch" promptText="Search users...">
                <VBox.margin>
                    <Insets bottom="0"/>
                </VBox.margin>
            </TextField>
            <ListView fx:id="suggestionList" visible="false" managed="false"
                      maxHeight="200" prefHeight="0">
                <VBox.margin>
                    <Insets top="0"/>
                </VBox.margin>
            </ListView>
        </VBox>

        <!-- Channel List -->
        <ListView fx:id="channelListView" VBox.vgrow="ALWAYS" styleClass="channel-list">
            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>
        </ListView>
    </VBox>
    <!-- Right Panel - Chat Area -->
    <VBox spacing="0" HBox.hgrow="ALWAYS" styleClass="chat-panel">
        <!-- Chat Header -->
        <HBox styleClass="chat-header" alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label fx:id="userLabel" styleClass="user-label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="deleteChannelButton" text="Delete Channel" styleClass="delete-button"/>
        </HBox>

        <!-- Messages Area -->
        <ListView fx:id="messageListView" VBox.vgrow="ALWAYS" styleClass="message-list"/>

        <!-- Message Input Area -->
        <HBox styleClass="message-input-area" spacing="10" alignment="CENTER">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <TextField fx:id="messageInput" HBox.hgrow="ALWAYS" promptText="Type a message..."/>
            <ImageView fx:id="sendButton" fitHeight="34.0" fitWidth="38.0"
                       onMouseClicked="#sendMessage" pickOnBounds="true" preserveRatio="true">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
                <image>
                    <Image url="@../../../../../Sources/send-svgrepo-com.png"/>
                </image>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </ImageView>
        </HBox>
    </VBox>
</HBox>